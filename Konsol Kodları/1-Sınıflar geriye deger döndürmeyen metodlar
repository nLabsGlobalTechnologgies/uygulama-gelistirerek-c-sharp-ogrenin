//Sınıflar
//geriye deger döndürmeyen metodlar
Message message = new Message();
message.ShowMessage();


Console.ReadLine();


public class Message
{
    public void ShowMessage()
    {
        Console.WriteLine("Merhaba Mesajı");
    }
}
//sonraki örnek
People peoples = new People();
peoples.PeopleList("Cuma KÖSE");
Console.ReadLine();


public class People
{
    public void PeopleList(string name)
    {
        for (int i = 0; i <= 10; i++)
        {
            Console.WriteLine($"{name} : " + i);
        }
    }
}
//sonraki örnek
//Sınıflar
//geriye deger döndürmeyen metodlar

string name;
Console.WriteLine("Lütfen İsim Girin");
name = Console.ReadLine();
People peoples = new People();
peoples.PeopleList(name);
Console.ReadLine();


public class People
{
    public void PeopleList(string name)
    {
        for (int i = 0; i <= 10; i++)
        {
            Console.WriteLine($"{name} : " + i);
        }
    }
}
//sonraki örnek ödev
//Sınıflar
//geriye deger döndürmeyen metodlar
string name, surname, job;
Console.WriteLine("Lütfen İsmini Gir");
name = Console.ReadLine();
Console.WriteLine("Lütfen Soyadını Gir");
surname = Console.ReadLine();
Console.WriteLine("Lütfen meslegini gir");
job = Console.ReadLine();
Console.Clear();
Console.WriteLine($"İsim: {name} Soyisim: {surname} Meslek: {job}");
Console.ReadLine();
